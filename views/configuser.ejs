<%include header%>
 <div style="display:flexbox"> 
	<div ng-controller="configusercontroller">
	<div>
		<div>
		<div style="text-align:left">
		<a data-target ="#myPopup" class="btn btn-default" data-toggle="modal">Add New</a>
		</div>
		<!-- Popup-->
		<div id="myPopup" class="modal fade" role="dialog" data-keyboard="true" >
			<div class="modal-dialog">
				<div class="modal-content">
					
					<form name="frmDevice" ng-submit="addNew(frmDevice.$valid)" novalidate>
	       			<div class="modal-header">
		                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	                	<h4 class="modal-title">Add new User</h4>
	            	</div>
	            	
	            	 <div class="modal-body">


		            	 <div class="trow">
		            	 	<span class="lbladd">User Name</span>
							<input type = "text" id="uname" ng-model="uname" ng-required="true" name="uname"/>
							<p ng-show="frmDevice.uname.$invalid && !frmDevice.uname.$pristine" class="error">User name required</p>
		            	 <div class="trow">
		            	 <span class="lbladd">Password </span>
	      					<input type = "number" id="passwd" max="40" ng-maxlength="40" ng-model="passwd" ng-required="true" name="passwd"/>
	      					<p ng-show="frmDevice.passwd.$invalid && !frmDevice.passwd.$pristine" class="error">Password required</p>
		            	 </div>
		            	<div class="trow">
		            	 <span class="lbladd">Password </span>
	      					<input type = "number" id="passwd1" max="40" ng-maxlength="40" ng-model="passwd1" ng-required="true" name="passwd1"/>
	      					<p ng-show="frmDevice.passwd1.$invalid && !frmDevice.passwd1.$pristine" class="error">Password required</p>
		            	 </div>
	                </div>
	                <div class="modal-footer">
	                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	                    <button type="submit" class="btn btn-primary" ng-disabled="frmDevice.$invalid" >Save changes</button>
	                </div>
				</form>

				</div>
			</div>
		</div>

	</div>
		<div class="col-xs-12 configGrid"> <!--Grid-->
			<div>

			</div>

		</div>
	</div>
	</div>
</div>
<%include script%>

<script src="/app/config/app.configservice.js" ></script>
<script src="/app/config/app.configusercontroller.js" ></script>
<%include footer%>